{
  "$schema": "https://turbo.build/schema.json",
  "globalDotEnv": [
    ".env"
  ],
  "pipeline": {
    "build": {
      "outputs": [
        "dist/**",
        "umd/**",
        "build/**"
      ],
      "dependsOn": [
        "^build",
        "typecheck"
      ]
    },
    "typecheck": {
      "inputs": [
        "src/**/*.ts",
        "src/**/*.tsx"
      ]
    },
    "test": {},
    "lint": {},
    "format": {},
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
  }
}
