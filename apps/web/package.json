    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "@types/ws": "^8.5.10",
    "drizzle-kit": "^0.19.13",
    "eslint": "latest",
    "eslint-config-custom": "workspace:*",
    "eslint-plugin-astro": "latest",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  }
