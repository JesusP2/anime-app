    "drizzle-orm": "^0.28.6",
    "env-cmd": "^10.1.0",
    "lucia": "^2.7.1",
    "openapi-fetch": "^0.9.2",
    "p-memoize": "^7.1.1",
    "p-queue": "^8.0.1",
    "pg": "^8.11.3",
    "postgres": "^3.3.5",
    "prettier": "^3.0.3",
    "prettier-plugin-astro": "^0.12.0",
    "cmdk": "^1.0.0",
    "react": "^18.2.0",
