    "@astrojs/react": "^3.0.10",
    "@astrojs/tailwind": "^5.0.1",
    "@fontsource-variable/inter": "^5.0.12",
    "@fontsource/bungee": "^5.0.19",
    "@libsql/client": "^0.6.0",
    "@fontsource/geist-sans": "^5.0.2",
    "@fontsource/twinkle-star": "^5.0.14",
    "@kobalte/core": "^0.11.0",
    "@lucia-auth/adapter-postgresql": "^2.0.1",
    "@lucia-auth/oauth": "^2.2.0",
    "@paralleldrive/cuid2": "^2.2.2",
    "@radix-ui/react-dialog": "^1.0.5",
