{
  "name": "anime-site",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev --port 3000",
    "start": "astro dev",
    "build": "astro check && tsc --noEmit && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "format": "prettier --write src/**/*.{astro,ts,tsx}",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "env-cmd tsx ./migrate.ts",
    "db:push": "env-cmd drizzle-kit push:pg",
    "db:studio": "env-cmd drizzle-kit studio"
  },
  "dependencies": {
    "@astrojs/cloudflare": "^7.5.1",
    "@astrojs/deno": "^5.0.1",
    "@astrojs/image": "^0.16.9",
    "@astrojs/node": "^6.0.3",
    "@astrojs/react": "^3.0.10",
    "@astrojs/solid-js": "^4.0.1",
    "@astrojs/tailwind": "^5.0.1",
    "@fontsource-variable/inter": "^5.0.12",
    "@fontsource/twinkle-star": "^5.0.14",
    "@kobalte/core": "^0.11.0",
    "@lucia-auth/adapter-postgresql": "^2.0.1",
    "@lucia-auth/oauth": "^2.2.0",
    "@paralleldrive/cuid2": "^2.2.2",
    "@repo/ion": "workspace:*",
    "@types/pg": "^8.10.3",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "astro": "^4.1.1",
    "astro-icon": "^0.8.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "drizzle-orm": "^0.28.6",
    "env-cmd": "^10.1.0",
    "lucia": "^2.7.1",
    "openapi-fetch": "^0.9.2",
    "p-memoize": "^7.1.1",
    "pg": "^8.11.3",
    "postgres": "^3.3.5",
    "prettier": "^3.0.3",
    "prettier-plugin-astro": "^0.12.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "solid-icons": "^1.1.0",
    "solid-js": "^1.8.15",
    "tailwind-merge": "^1.14.0",
    "tailwindcss": "^3.3.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "drizzle-kit": "^0.19.13",
    "eslint": "latest",
    "eslint-config-custom": "*",
    "eslint-plugin-astro": "latest",
    "tsx": "^4.7.1"
  }
}
