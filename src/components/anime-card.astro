---
import { Image } from "astro:assets";
import type { Anime } from "@/lib/schemas/anime";
interface Props {
  anime: Anime;
}

const { anime } = Astro.props;
---
<a
    href={`/anime/${anime.mal_id}`}
    class="my-4 mx-8 p-4 bg-gray-600 flex gap-4 max-w-7xl w-full"
>
  <Image
      src={anime.images.jpg.large_image_url}
      width={100}
      height={100}
      alt="yo"
      format="jpeg"
      class="rounded-xl"
  />
  <div class="text-left">
    <h1 class="text-xl text-white">{anime.title}</h1>
    <div>
      <div>score: {anime.score || "N/A"}</div>
      <div>type: {anime.type}</div>
    </div>
  </div>
</a>
