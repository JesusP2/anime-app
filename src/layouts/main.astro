---
import { ViewTransitions } from 'astro:transitions';
import Search from "../components/search.astro";
export interface Props {
  title: string;
}

const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="text-white">
    <div class="flex bg-zinc-700">
      <div class="w-72 h-screen bg-neutral-900 shadow-zinc-900 shadow-lg">
        <h2 class="text-2xl text-center font-bold py-4">ANIME TITLE</h2>
        <Search />
        <a class="block mt-2" href="/about">About</a>
        <a class="block mt-2" href="/">main</a>
        <a class="block mt-2" href="/home">Home</a>
      </div>
      <div class="flex-1 h-screen overflow-x-scroll">
        <slot />
      </div>
    </div>
  </body>
</html>


