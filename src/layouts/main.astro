---
import '@fontsource-variable/inter';
import { Icon } from 'astro-icon';
import Search from '../components/search.astro';
import Tab from '@/components/tab.astro';
import { Dropdown } from '@/components/solid/mangas-dropdown';
import { AvatarDropdown } from '@/components/solid/avatar-dropdown';
import { SearchBar } from '@/components/solid/search-bar';
export interface Props {
  title: string;
}

const { title } = Astro.props;
const session = await Astro.locals.auth.validate();
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="text-white">
    <div class="flex">
      <div
        class="w-72 h-screen bg-neutral-900 shadow-zinc-900 shadow-lg flex-none flex flex-col justify-between overflow-y-scroll"
      >
        <div>
          <h2 class="text-2xl text-center font-bold py-4">APP NAME</h2>
          <Search />
          <ul class="space-y-3 mt-10">
            <li>
              <Tab href="/">
                <Icon pack="ph" name="house-light" class="w-6" />
                 Home
              </Tab>
            </li>
            <li>
              <Tab href="/current-season">
                <Icon pack="ph" name="calendar-blank" class="w-6" />
                 Current season
              </Tab>
            </li>
            <li>
              <Tab href="/watchlist">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="1.5em"
                  height="1.5em"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill="currentColor"
                    d="M1 3h16v2H1Zm0 6h6v2H1Zm0 6h8v2H1Zm8-4.24h3.85L14.5 7l1.65 3.76H20l-3 3.17l.9 4.05l-3.4-2.14L11.1 18l.9-4.05Z"
                  ></path>
                </svg>
                 Watchlist
              </Tab>
              <Dropdown
                title="Animes"
                list={[
                  { href: '/animes/not-started', label: 'Not started' },
                  { href: '/animes/started', label: 'Started' },
                  { href: '/animes/finished', label: 'Finished' },
                ]}
                client:load
              />
              <Dropdown
                title="Mangas"
                list={[
                  { href: '/mangas/not-started', label: 'Not started' },
                  { href: '/mangas/started', label: 'Started' },
                  { href: '/mangas/finished', label: 'Finished' },
                ]}
                client:load
              />
              <Dropdown
                title="Light Novels"
                list={[
                  { href: '/light-novels/not-started', label: 'Not started' },
                  { href: '/light-novels/started', label: 'Started' },
                  { href: '/light-novels/finished', label: 'Finished' },
                ]}
                client:load
              />
            </li>
          </ul>
        </div>
        {
          session ? (
            <div class="mb-4">
              <AvatarDropdown
                name={session?.user?.username || ''}
                src={session?.user.avatar_image!}
                alt="banana"
                client:load
              />
            </div>
          ) : (
            <a
              href="/auth/signin"
              class="mb-4 ml-4 text-center text-neutral-200 hover:text-white py-2 rounded-md w-20 font-inter border-neutral-400 border"
            >
              Sign in
            </a>
          )
        }
      </div>
      <div
        class="flex-1 h-screen overflow-y-auto overflow-x-hidden font-inter px-20 py-10"
      >
        <SearchBar client:load />
        <slot />
      </div>
    </div>
    <style is:global>
      @tailwind base;
      @tailwind components;
      @tailwind utilities;
      .text-clip {
        display: -webkit-box;
        -webkit-line-clamp: 4;
        -webkit-box-orient: vertical;
        overflow: hidden;
      }

      .auto-fill-grid {
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      }
      @layer base {
        :root {
          --background: 0 0% 100%;
          --foreground: 240 10% 3.9%;

          --muted: 240 4.8% 95.9%;
          --muted-foreground: 240 3.8% 46.1%;

          --popover: 0 0% 100%;
          --popover-foreground: 240 10% 3.9%;

          --border: 240 5.9% 90%;
          --input: 240 5.9% 90%;

          --card: 0 0% 100%;
          --card-foreground: 240 10% 3.9%;

          --primary: 240 5.9% 10%;
          --primary-foreground: 0 0% 98%;

          --secondary: 240 4.8% 95.9%;
          --secondary-foreground: 240 5.9% 10%;

          --accent: 240 4.8% 95.9%;
          --accent-foreground: 240 5.9% 10%;

          --destructive: 0 84.2% 60.2%;
          --destructive-foreground: 0 0% 98%;

          --info: 204 94% 94%;
          --info-foreground: 199 89% 48%;

          --success: 149 80% 90%;
          --success-foreground: 160 84% 39%;

          --warning: 48 96% 89%;
          --warning-foreground: 25 95% 53%;

          --error: 0 93% 94%;
          --error-foreground: 0 84% 60%;

          --ring: 240 5.9% 10%;

          --radius: 0.5rem;
        }

        [data-kb-theme='dark'] {
          --background: 240 10% 3.9%;
          --foreground: 0 0% 98%;

          --muted: 240 3.7% 15.9%;
          --muted-foreground: 240 5% 64.9%;

          --accent: 240 3.7% 15.9%;
          --accent-foreground: 0 0% 98%;

          --popover: 240 10% 3.9%;
          --popover-foreground: 0 0% 98%;

          --border: 240 3.7% 15.9%;
          --input: 240 3.7% 15.9%;

          --card: 240 10% 3.9%;
          --card-foreground: 0 0% 98%;

          --primary: 0 0% 98%;
          --primary-foreground: 240 5.9% 10%;

          --secondary: 240 3.7% 15.9%;
          --secondary-foreground: 0 0% 98%;

          --destructive: 0 62.8% 30.6%;
          --destructive-foreground: 0 0% 98%;

          --info: 204 94% 94%;
          --info-foreground: 199 89% 48%;

          --success: 149 80% 90%;
          --success-foreground: 160 84% 39%;

          --warning: 48 96% 89%;
          --warning-foreground: 25 95% 53%;

          --error: 0 93% 94%;
          --error-foreground: 0 84% 60%;

          --ring: 240 4.9% 83.9%;

          --radius: 0.5rem;
        }
      }

      @layer base {
        * {
          @apply border-border;
        }
        body {
          @apply bg-background text-foreground;
          font-feature-settings:
            'rlig' 1,
            'calt' 1;
        }
      }
      /* width */
      ::-webkit-scrollbar {
        width: 3px;
      }

      /* Track */
      ::-webkit-scrollbar-track {
        background: #f1f1f1;
      }

      /* Handle */
      ::-webkit-scrollbar-thumb {
        background: #888;
      }

      /* Handle on hover */
      ::-webkit-scrollbar-thumb:hover {
        background: #555;
      }
    </style>
  </body>
</html>
