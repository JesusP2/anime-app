---
import "@fontsource-variable/inter";
import { ViewTransitions } from "astro:transitions";
import { Icon } from "astro-icon";
import Search from "../components/search.astro";
import Tab from "@/components/tab.astro";
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body transition:animate="morph" class="text-white">
    <div class="flex">
      <div class="w-72 h-screen bg-neutral-900 shadow-zinc-900 shadow-lg">
        <h2 class="text-2xl text-center font-bold py-4">ANIME TITLE</h2>
        <Search />
        <ul class="space-y-3 mt-10">
          <li>
            <Tab href="/">
              <Icon pack="ph" name="house-light" class="w-6" />
              Home
            </Tab>
          </li>
          <li>
            <Tab href="/current-season">
              <Icon pack="ph" name="calendar-blank" class="w-6" />
              Current season
            </Tab>
          </li>
          <li>
            <Tab href="/watchlist">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="1.5em"
                height="1.5em"
                viewBox="0 0 20 20"
              >
                <path
                  fill="currentColor"
                  d="M1 3h16v2H1Zm0 6h6v2H1Zm0 6h8v2H1Zm8-4.24h3.85L14.5 7l1.65 3.76H20l-3 3.17l.9 4.05l-3.4-2.14L11.1 18l.9-4.05Z"
                ></path>
              </svg>
              Watchlist
            </Tab>
          </li>
        </ul>
      </div>
      <div
        class="flex-1 h-screen overflow-y-auto overflow-x-hidden font-inter px-20"
      >
        <slot />
      </div>
    </div>
  </body>
</html>
